<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#81B8E7" android:startColor="#81B8E7" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
         <gradient android:angle="90" android:endColor="#81B8E7" android:startColor="#81B8E7" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#BDBDBD" android:startColor="#BDBDBD" />
        </shape>
    </item>

</selector>